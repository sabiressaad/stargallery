<resources>
    <!-- Thème principal avec ActionBar rouge -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#2196F3</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!-- Style pour la barre d'action (ActionBar) -->
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <!-- Style pour le texte du titre dans la barre d'action -->
    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Thème pour l'écran de démarrage sans ActionBar -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Style pour les éléments de texte -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>